  <script>
      function moveItem(event) {
          var item = event.target;
          var acquiredList = document.getElementById('acquired');
          var stillNeedList = document.getElementById('stillNeed');

          // Add 'moving' class to animate the item
          item.classList.add('moving');
          setTimeout(function() {
              item.classList.remove('moving');
          }, 500); // Remove the class after the animation completes

          if (item.parentNode === acquiredList) {
              // Remove from acquired list and add to still need list
              acquiredList.removeChild(item);
              stillNeedList.appendChild(item);
              // Change color to red
              item.classList.add('still-need');
          } else {
              // Remove from still need list and add to acquired list
              stillNeedList.removeChild(item);
              acquiredList.appendChild(item);
              // Change color back to default
              item.classList.remove('still-need');
          }
      }

      // Add the click event listener to each item
      var items = document.getElementsByClassName('item');
      for (var i = 0; i < items.length; i++) {
          items[i].addEventListener('click', moveItem);
      }

      document.querySelectorAll('progress').forEach((progress) => {
          const value = progress.getAttribute('value');
          progress.style.setProperty('--value', value);
      });
  </script>


